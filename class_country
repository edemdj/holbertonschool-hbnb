import uuid
from datetime import datetime

class Country:
    def __init__(my, name: str):
        my.country_id = uuid.uuid4()  #grace a Ã§a je genere un UUID unique pour chaque  country
        my.name = name
        my.created_at = datetime.now()
        my.updated_at = datetime.now()
        my.cities = []

    def add_city(my, city):
        my.cities.append(city)
        my.updated_at = datetime.now()

    def get_cities(my):
        return my.cities

    def __str__(my):
        return f"Country({my.country_id}, {my.name})"
